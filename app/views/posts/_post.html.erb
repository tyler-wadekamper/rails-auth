<div id="<%= dom_id post %>">
  <p>
    <strong>
      Written by: 
      <% if user_signed_in? %>
        <%= post.user.full_name %>
      <% elsif %>
        <%= "Anonymous" %>
      <% end %>
    </strong>
  </p>
  
  <p>
    <strong>Title:</strong>
    <%= post.title %>
  </p>

  <p>
    <strong>Body:</strong>
    <%= post.body %>
  </p>

</div>
